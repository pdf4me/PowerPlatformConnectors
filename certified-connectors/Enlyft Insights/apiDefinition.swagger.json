        "summary": "Get Account Plan Insights",
        "description": "Action to get account plan summary for the requested website or recordId. Topic can be provided to get specific insights. Run exactly once per users provided prompt. Do not trigger this multiple times for user's single prompt. DO NOT export Contact during execution of account plan tool.",
        "operationId": "GetAccountPlanInsights",
        "parameters": [
          {
            "name": "recordType",
            "in": "query",
            "required": false,
            "type": "string",
            "default": "account",
            "x-ms-summary": "RecordType",
            "description": "Record type of the entity for which account plan insights are to be fetched."
          },
          {
            "name": "recordId",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Record Id of the entity for which account plan insights are to be fetched",
            "x-ms-summary": "RecordId"
          },
          {
            "name": "botChannel",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Channel name where the bot is running.",
            "x-ms-summary": "BotChannel"
          },
          {
            "name": "auxiliaryDomain",
            "in": "query",
            "required": false,
            "type": "string",
            "x-ms-summary": "AuxiliaryDomain",
            "description": "Domain or website URL for which account plan insights are to be fetched."
          },
          {
            "name": "planTopic",
            "in": "query",
            "required": false,
            "type": "string",
            "x-ms-summary": "PlanTopic",
            "description": "Topic of the account plan for which insights are to be fetched. This helps in categorizing the insights."
          }
        ],
        "x-ms-openai-data": {
          "openai-enabled": true,
          "operations": [
            {
              "operationId": "GetAccountPlanInsights",
              "x-ms-require-user-confirmation": false
            }
          ]
        }
      }
