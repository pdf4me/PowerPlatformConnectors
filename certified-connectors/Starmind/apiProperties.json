{
  "properties": {
    "connectionParameters": {
      "sm_BaseUrl": {
        "type": "string",
        "uiDefinition": {
          "displayName": "The Starmind network. Example: yourcompany.starmind.com",
          "description": "Specify your Starmind network. Example: yourcompany.starmind.com",
          "tooltip": "e.g., yourcompany.starmind.com",
          "constraints": {
            "required": "true",
            "tabIndex": 2
          }
        }
      },
      "api_key": {
        "type": "securestring",
        "uiDefinition": {
          "displayName": "API key as provided by Starmind",
          "description": "Enter the API key as provided by Starmind",
          "tooltip": "Use an API key issued by Starmind for secure, automated access.",
          "constraints": {
            "clearText": false,
            "required": "true",
            "tabIndex": 3
          }
        }
      }
    },
    "policyTemplateInstances": [
      {
        "templateId": "setheader",
        "title": "Apply Starmind API key to Header",
        "parameters": {
          "x-ms-apimTemplateParameter.name": "Authorization",
          "x-ms-apimTemplateParameter.value": "Bearer @connectionParameters('api_key')",
          "x-ms-apimTemplateParameter.existsAction": "override",
          "x-ms-apimTemplate-policySection": "Request"
        }
      },
      {
        "templateId": "dynamichosturl",
        "title": "Apply configured sm_baseUrl to all requests",
        "parameters": {
          "x-ms-apimTemplateParameter.urlTemplate": "https://@connectionParameters('sm_BaseUrl')"
        }
      }
    ],
    "iconBrandColor": "#5135C1",
    "capabilities": [
      "actions"
    ],
    "publisher": "Starmind",
    "stackOwner": "Starmind"
  }
}

